{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "module": "CommonJS",
    "target": "es2020",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@axarai/axar": ["./"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
