{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "module": "NodeNext",
    "target": "es2020",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    "paths": {
      "@axarai/axar": ["./"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "test/**/*", "examples/**/*"],
  "exclude": ["node_modules"]
}
